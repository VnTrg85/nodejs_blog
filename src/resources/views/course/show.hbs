<div class="container">
  <div class="mt-4">
    <div class="row">
      <div class="col-lg-3">
        <button type="button" class="btn btn-primary mt-100">Học ngay</button>
        <ul class="list-group mt-4">
          <li class="list-group-item">Tác giả: SonDang</li>
          <li class="list-group-item">Thời lượng: {{course.thoiLuong}}</li>
        </ul>
      </div>
      <div class="col-lg-9">
        <h2>{{course.name}}</h2>
        <div class="embed-responsive embed-responsive-21by9 mt-4">
          <iframe
            width="560"
            height="315"
            src="https://www.youtube.com/embed/{{course.videoId}}"
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
          ></iframe>
        </div>
        <p class="mt-2">
          {{course.description}}
        </p>
      </div>
    </div>
  </div>
</div>